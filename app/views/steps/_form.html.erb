<%= simple_form_for @step, :html => { :class => 'form-inline'} do |f| %>
<%= f.input :name, label: false, placeholder: 'Title of new analysis step' %>
<%= f.input :description, label: false, placeholder: 'What does this step do?' %>
<%= f.input :number, label: false, placeholder: 'Number of step in sequence' %>
<%= f.collection_select :usedplugin, Plugin.all, :id, :name, prompt: "Tool to
								      use" %>
<%= f.grouped_collection_select :usedcall, Plugin.order(:name), :plugin_calls, :name,
    :id, :what, include_blank: true, prompt: "What to do" %>
<%= f.hidden_field :plugin_call_id %>

<%= f.fields_for :properties do |builder| %>
  <% @step.plugin_call.fields.each do |field| %>
    <% if field.field_type %>
    <%= render "#{field.field_type}", field: field, f: builder %>
    <% end %>
  <% end %>
<% end %>

<br /><br />
<%= f.submit 'Add Step', :class => 'btn-primary btn-small' %>
<% end %>


