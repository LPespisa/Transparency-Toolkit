<%= form_for [recipe, recipe.steps.build],  html: {:id => 'new_visualize_step'} do |f| %>
    <%= f.grouped_collection_select :plugin_call_id, Plugin.where(category_id: 3).order(:name), :plugin_calls, :name, :id, :what, include_blank: 'Please select', wrapper_html: {class: 'medium-12 small-12 columns'} %>
    <%= hidden_field_tag :inrecipe, recipe.id %>
    <%= f.submit 'Next: Tool Inputs', :class => 'close-reveal-modal button modal-form' %>
<% end %>
