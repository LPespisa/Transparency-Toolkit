<%- model_class = PluginCall -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:call) %></th>
      <th><%= model_class.human_attribute_name(:details) %></th>
      <th><%= model_class.human_attribute_name(:what) %></th>
      <th><%= model_class.human_attribute_name(:plugin_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @plugin_calls.each do |plugin_call| %>
      <tr>
        <td><%= link_to plugin_call.id, plugin_call_path(plugin_call) %></td>
        <td><%= plugin_call.call %></td>
        <td><%= plugin_call.details %></td>
        <td><%= plugin_call.what %></td>
        <td><%= plugin_call.plugin_id %></td>
        <td><%=l plugin_call.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_plugin_call_path(plugin_call), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      plugin_call_path(plugin_call),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_plugin_call_path,
            :class => 'btn btn-primary' %>
